@page "/search"
@using Microsoft.AspNetCore.Components.QuickGrid;

<label>Search</label>
<div class="container-fluid mb-5">
    <div class="row">
        <div class="col-2">
            <InputText @bind-Value="SearchTitle" />
        </div>
        <div class="col-1">
            <button @onclick="SearchOMDB">Search</button>
        </div>
    </div>
</div>
@if (movies is not null)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <QuickGrid Items="@movies">
                    <PropertyColumn Property="@(m => m.Title)" />
                    <PropertyColumn Property="@(m => m.Year)" />
                    <TemplateColumn Title="Add Movie to Favorites">
                        <button @onclick="@(() => AddMovie(context))">Add Movie</button>
                    </TemplateColumn>
                </QuickGrid>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1">
                @if (pageNum > 1)
                {
                    <button @onclick="PreviousPage">&lt;</button>
                }
            </div>
            <div class="col-md-5">
                Page: @pageNum
            </div>
            <div class="col-md-1">
                @if (pageNum < totalPages)
                {
                    <button @onclick="NextPage">&gt;</button>
                }
            </div>
        </div>
    </div>
}

